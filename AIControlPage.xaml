<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocketFence.AIControlPage"
             Title="AI Control Center"
             BackgroundColor="{StaticResource Light}">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- Header -->
            <Frame BackgroundColor="{StaticResource AIAccent}" HasShadow="True" CornerRadius="15">
                <VerticalStackLayout Spacing="5">
                    <Label Text="AI Control Center"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource White}"
                           HorizontalOptions="Center" />
                    <Label Text="Intelligent Network Management and Parental Controls"
                           FontSize="14"
                           TextColor="{StaticResource White}"
                           HorizontalOptions="Center"
                           Opacity="0.8" />
                </VerticalStackLayout>
            </Frame>

            <!-- Loading Indicator -->
            <ActivityIndicator x:Name="LoadingIndicator"
                              IsVisible="False"
                              IsRunning="True"
                              Color="{StaticResource AIAccent}"
                              VerticalOptions="Center" />

            <!-- Dashboard Stats -->
            <Frame BackgroundColor="{StaticResource White}" HasShadow="True" CornerRadius="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Network Intelligence Dashboard"
                           Style="{StaticResource SubHeaderLabel}"
                           Margin="0,0,0,15" />

                    <!-- Network Health -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                        <Label Text="Network Health" FontAttributes="Bold" />
                        <ProgressBar x:Name="NetworkHealthProgress"
                                    Progress="0.85"
                                    ProgressColor="{StaticResource Success}" />
                        <Label x:Name="NetworkHealthLabel"
                               Text="85.0%"
                               FontSize="14"
                               TextColor="{StaticResource Success}" />
                    </VerticalStackLayout>

                    <!-- Device Stats -->
                    <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                        <Label x:Name="ChildDevicesLabel"
                               Text="ðŸ‘¶ Child Devices: 2"
                               FontSize="14"
                               FontAttributes="Bold" />
                        <Label x:Name="SecurityStatusLabel"
                               Text="ðŸ›¡ï¸ Security: Secure"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="{StaticResource Success}" />
                    </VerticalStackLayout>

                    <!-- AI Controls -->
                    <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                x:Name="AutoConfigureButton"
                                Text="Auto Setup"
                                Style="{StaticResource AIButton}"
                                Clicked="OnAutoConfigureClicked"
                                Margin="0,0,5,0"
                                FontSize="12" />

                        <Button Grid.Column="1"
                                x:Name="OptimizeButton"
                                Text="Optimize"
                                BackgroundColor="{StaticResource Success}"
                                TextColor="{StaticResource White}"
                                Clicked="OnOptimizeNetworkClicked"
                                Margin="5,0,5,0"
                                FontSize="12" />

                        <Button Grid.Column="2"
                                x:Name="DiagnosticsButton"
                                Text="Diagnose"
                                BackgroundColor="{StaticResource Warning}"
                                TextColor="{StaticResource Black}"
                                Clicked="OnRunDiagnosticsClicked"
                                Margin="5,0,0,0"
                                FontSize="12" />
                    </Grid>
                </Grid>
            </Frame>

            <!-- Smart Devices -->
            <Frame BackgroundColor="{StaticResource White}" HasShadow="True" CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Smart Device Recognition"
                           Style="{StaticResource SubHeaderLabel}" />

                    <CollectionView x:Name="SmartDevicesCollectionView"
                                   HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,5">
                                    <Frame BackgroundColor="{StaticResource Light}"
                                           CornerRadius="8"
                                           Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0"
                                                   Text="{Binding Type}"
                                                   FontSize="20"
                                                   VerticalOptions="Center"
                                                   Margin="0,0,10,0" />

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding Name}"
                                                       FontAttributes="Bold"
                                                       FontSize="14" />
                                                <Label Text="{Binding UserType}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource Gray600}" />
                                            </VerticalStackLayout>

                                            <Label Grid.Column="2"
                                                   Text="{Binding Status}"
                                                   FontSize="12"
                                                   TextColor="{Binding StatusColor}"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- AI Recommendations -->
            <Frame BackgroundColor="{StaticResource White}" HasShadow="True" CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="AI Recommendations"
                           Style="{StaticResource SubHeaderLabel}" />

                    <CollectionView x:Name="RecommendationsCollectionView"
                                   HeightRequest="150">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,5">
                                    <Frame BackgroundColor="{StaticResource Light}"
                                           CornerRadius="8"
                                           Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0"
                                                   Text="{Binding Priority}"
                                                   FontSize="12"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Start"
                                                   Margin="0,0,10,0" />

                                            <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                <Label Text="{Binding Title}"
                                                       FontAttributes="Bold"
                                                       FontSize="14" />
                                                <Label Text="{Binding Description}"
                                                       FontSize="12"
                                                       TextColor="{StaticResource Gray600}" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Recent AI Alerts -->
            <Frame BackgroundColor="{StaticResource White}" HasShadow="True" CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Recent AI Activity"
                           Style="{StaticResource SubHeaderLabel}" />

                    <CollectionView x:Name="AlertsCollectionView"
                                   HeightRequest="120">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="0,3">
                                    <Frame BackgroundColor="{StaticResource Light}"
                                           CornerRadius="6"
                                           Padding="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0"
                                                   Text="{Binding Time}"
                                                   FontSize="10"
                                                   FontAttributes="Bold"
                                                   TextColor="{StaticResource Gray500}"
                                                   VerticalOptions="Start"
                                                   Margin="0,0,10,0" />

                                            <VerticalStackLayout Grid.Column="1" Spacing="1">
                                                <Label Text="{Binding Message}"
                                                       FontSize="12"
                                                       FontAttributes="Bold" />
                                                <Label Text="{Binding Action}"
                                                       FontSize="10"
                                                       TextColor="{StaticResource Gray600}" />
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Status -->
            <Frame BackgroundColor="{StaticResource Light}" CornerRadius="10">
                <Label x:Name="StatusLabel"
                       Text="Ready for AI analysis"
                       FontSize="14"
                       TextColor="{StaticResource AIAccent}"
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>