<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:PocketFence"
       x:Class="PocketFence.AppShell"
       Title="PocketFence">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        Icon="wifi.png"/>

    <ShellContent
        Title="Devices"
        ContentTemplate="{DataTemplate local:DeviceListPage}"
        Route="DeviceListPage"
        Icon="devices.png"/>

    <ShellContent
        Title="AI Controls"
        ContentTemplate="{DataTemplate local:AIControlPage}"
        Route="AIControlPage"
        Icon="ai.png"/>

</Shell>